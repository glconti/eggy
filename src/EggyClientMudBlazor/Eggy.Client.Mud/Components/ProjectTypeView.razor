@using Eggy.Domain.Models
@inject IProjectProcessor ProjectProcessor

<MudStack Row="true">
    <MudTextField T="string" Label="Type" ReadOnly="true" @bind-Value="@TypeReadonly"></MudTextField>
    <MudTextField T="string" Label="Category" ReadOnly="true" @bind-Value="@CategoryReadonly"/>
    <MudButton Variant="Variant.Filled" Color="Color.Error" StartIcon="@Icons.Material.Filled.Delete" DisableElevation="true" OnClick="@DeleteProject"/>
</MudStack>

@code {

    [Parameter]
    [EditorRequired]
    public ProjectType ProjectType { get; set; } = null!;

    public string TypeReadonly
    {
        get => ProjectType.Type;
        set => throw new NotImplementedException();
    }

    public string CategoryReadonly
    {
        get => ProjectType.Category;
        set => throw new NotImplementedException();
    }

    public void DeleteProject() => ProjectProcessor.RemoveProjectType(ProjectType);
}