@using Eggy.Domain.Models
@inject IProjectProcessor ProjectProcessor

<MudStack Row="true">
    <MudTextField Label="Type" ReadOnly="true" @bind-Value="TypeReadonly"></MudTextField>
    <MudTextField Label="Category" ReadOnly="true" @bind-Value="CategoryReadonly"/>
    <MudTextField Label="Id" ReadOnly="true" @bind-Value="IdReadonly"/>
    <MudTextField Label="Name" ReadOnly="true" @bind-Value="NameReadonly"/>
    <MudButton Variant="Variant.Text" Color="Color.Error" StartIcon="@Icons.Material.Filled.Delete" OnClick="@DeleteProject"/>
</MudStack>

@code {

    [Parameter]
    [EditorRequired]
    public Project Project { get; set; } = null!;

    public string TypeReadonly
    {
        get => Project.Type;
        set => throw new NotImplementedException();
    }

    public string CategoryReadonly
    {
        get => Project.Category;
        set => throw new NotImplementedException();
    }

    public string IdReadonly
    {
        get => Project.Id;
        set => throw new NotImplementedException();
    }

    public string NameReadonly
    {
        get => Project.Name;
        set => throw new NotImplementedException();
    }

    public void DeleteProject() => ProjectProcessor.RemoveProject(Project);
}