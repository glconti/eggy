@page "/"
@inject IWeekTimeProcessor WeekTimeProcessor
@inject IProjectProcessor ProjectProcessor

<PageTitle>Week time entry</PageTitle>

<MudText Typo="Typo.h3" GutterBottom="true">Time entries for week @WeekTimeProcessor.WeekTime.Id</MudText>
<MudText Class="mb-8">From @WeekTimeProcessor.WeekTime.DaysOfTheWeek.First() to @WeekTimeProcessor.WeekTime.DaysOfTheWeek.Last()</MudText>

<WeekTimeEntryView/>

@code {

    protected override async Task OnInitializedAsync()
    {
        ProjectProcessor.Init();
        await WeekTimeProcessor.Load();
    }

}